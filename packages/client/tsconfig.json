{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "rootDir": "./src/",
    "sourceMap": true
  },
  "references": [
    {
      "path": "../db/tsconfig.json"
    },
    {
      "path": "../types/tsconfig.json"
    }
  ],
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist", "node_modules"]
}
