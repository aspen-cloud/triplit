{
  "name": "@triplit/server",
  "packageManager": "yarn@3.4.1",
  "version": "1.0.7",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./hono": {
      "types": "./dist/hono.d.ts",
      "import": "./dist/hono.js",
      "default": "./dist/hono.js"
    },
    "./cloudflare": {
      "types": "./dist/cloudflare.d.ts",
      "import": "./dist/cloudflare.js",
      "default": "./dist/cloudflare.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && yarn validate:types",
    "build:watch": "tsc -w",
    "lint": "tsc --noEmit",
    "lint:build": "npx publint",
    "util:gentoken": "node ./dev/scripts/createToken.cjs",
    "publish-pkg": "node ../../scripts/npm-check-version-and-publish.js && yarn sentry:sourcemaps",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org aspen --project triplit-server ./dist && sentry-cli sourcemaps upload --release=$npm_package_version --org aspen --project triplit-server ./dist",
    "validate:types": "node ../../scripts/check-for-local-references-in-declarations.js dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/node-ws": "^1.0.7",
    "@sentry/cli": "^2.31.2",
    "@sentry/node": "^7.112.2",
    "@triplit/client": "workspace:^",
    "@triplit/db": "workspace:^",
    "@triplit/logger": "workspace:^",
    "@triplit/server-core": "workspace:^",
    "archiver": "^7.0.1",
    "consola": "^3.2.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "hono": "^4.6.20",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@sentry/core": "^8.37.0",
    "@triplit/types": "workspace:^",
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9",
    "@types/multer": "^1",
    "@types/node": "^22.13.9",
    "@types/ws": "^8.5.4",
    "better-sqlite3": "^11.8.1",
    "esbuild": "^0.19.3",
    "level": "^8.0.1",
    "lmdb": "^3.0.12",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  },
  "peerDependenciesMeta": {
    "better-sqlite3": {
      "optional": true
    },
    "level": {
      "optional": true
    },
    "lmdb": {
      "optional": true
    }
  },
  "peerDependencies": {
    "better-sqlite3": "*",
    "level": "*",
    "lmdb": "*"
  }
}
